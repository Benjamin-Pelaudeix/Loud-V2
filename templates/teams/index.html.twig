{% extends 'base.html.twig' %}

{% block title %}Nos équipes{% endblock %}

{% block body %}
    <div class="container">
        <h1>Noos équipes</h1>
        {% for section in sections | sort((a,b) => a.name > b.name) %}
            <h2>{{ section.name }}</h2>
            <div class="members">
                {% for member in section.members | sort((a,b) => a.gamename > b.gamename) %}
                <div class="member">
                    <div class="member-photo">
                        {% if member.photo %}
                            <img src="/uploads/{{ member.photo }}" alt="Photo {{ member.gamename }}">
                        {% else %}
                            <img src="{{ asset('assets/img/logo/loudrouge.png') }}" alt="Logo Loud">
                        {% endif %}
                    </div>
                    <div class="member-infos">
                        <div class="member-info-flex">
                            <img src="/assets/img/flags/{{ member.nationality.flag }}" alt="{{ member.nationality.countryname }}">
                            <div class="member-info-names">
                                <h1 class="member-name">{{ member.gamename }}</h1>
                                <h2 class="member-full-name">
                                    {{ member.role.name }}
                                </h2>
                            </div>
                        </div>
                        <hr>
                        <div class="member-socials">
                            {% if member.twitter %}
                                <a href="{{ member.twitter }}">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            {% endif %}
                            {% if member.twitch %}
                                <a href="{{ member.twitch }}">
                                    <i class="fab fa-twitch"></i>
                                </a>
                            {% endif %}
                            {% if member.discord %}
                                <a href="{{ member.discord }}">
                                    <i class="fab fa-discord"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
